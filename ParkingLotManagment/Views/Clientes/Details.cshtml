@model ParkingLotManagment.Models.Cliente

@{
    ViewData["Title"] = "Details";
}
<br/>
<h2>Dashboard Cliente</h2>
@* <h4>Cliente</h4> *@
<hr />
<div class="d-flex justify-content-between flex-row">
    <div class="row card border-primary mb-3 w-50">
        <div class="card-title card-header bg-light d-flex justify-content-between">
            <h4 class="title-register-forum">Datos del Cliente</h4>
            <a asp-action="Edit" asp-route-id="@Model?.Id">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" height="20" width="20">
                    <path d="M362.7 19.3L314.3 67.7 444.3 197.7l48.4-48.4c25-25 25-65.5 0-90.5L453.3 19.3c-25-25-65.5-25-90.5 0zm-71 71L58.6 323.5c-10.4 10.4-18 23.3-22.2 37.4L1 481.2C-1.5 489.7 .8 498.8 7 505s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L421.7 220.3 291.7 90.3z" />
                </svg>
                @* Edit *@
            </a>
        </div>
        <div class="card-body list-group" style="padding: 16px;">
            <div class="list-group-item list-group-item-light d-flex justify-content-between align-items-center">
                        <dt class = "col-sm-6">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                    </div>
            <div class="list-group-item list-group-item-light d-flex justify-content-between align-items-center">
                        <dt class = "col-sm-6">
                            @Html.DisplayNameFor(model => model.Apellido)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.Apellido)
                        </dd>
                    </div>
            <div class="list-group-item list-group-item-light d-flex justify-content-between align-items-center">
                        <dt class = "col-sm-6">
                            @Html.DisplayNameFor(model => model.Username)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Username)
                        </dd>
                    </div>
            <div class="list-group-item list-group-item-light d-flex justify-content-between align-items-center">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.FechaDeNacimiento)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaDeNacimiento)
                        </dd>
                    </div>
            <div class="list-group-item list-group-item-light d-flex justify-content-between align-items-center">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Dni)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Dni)
                        </dd>
                    </div>
        </div>
    </div>
    <div class="card border-primary mb-3 w-50">
        <div class="card-title card-header bg-light d-flex justify-content-between">
            <h4 class="title-register-forum">Vehículos del Cliente</h4>
            <a asp-controller="Vehiculos" asp-action="Create" asp-route-id="@Model?.Id">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="22" width="22">
                    <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z" />
                </svg>
                @* Edit *@
            </a>
        </div>
        <div class="card-body d-flex row">
            <div>
                <p>@Html.DisplayFor(model => model.Vehiculos)</p>
            </div>
        </div>

    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
